<%= render 'layouts/navigation' %>

<div class="avito-split-container">
  <!-- Partie gauche avec logo et texte -->
  <div class="avito-left-panel">
    <div class="avito-left-content">
      <h2 class="avito-title">Vente et achat en ligne</h2>
      <p class="avito-subtitle">Avito, la marketplace <span class="text-primary">Numéro 1</span> de vente et d'achat en ligne au Maroc.</p>
      
     <div class="avito-logo">
        <%= image_tag "logo.png", alt: "Avito Logo", class: "img-fluid" %>
      </div>
    </div>
  </div>
  
  <!-- Partie droite avec formulaire -->
  <div class="avito-right-panel">
    <div class="avito-form-container">
      <h1 class="avito-form-title">Connectez-vous à Avito</h1>
      <p class="avito-form-subtitle">Utilisez votre numéro de téléphone pour se connecter rapidement</p>
      
      <%= form_with(url: login_path, scope: :session) do |f| %>
        <% if flash[:danger] %>
          <div class="avito-error-message">
            <%= flash[:danger] %>
          </div>
        <% end %>
        
        <div class="avito-form-group">
          <%= f.label :email, "Email", class: "avito-label" %>
          <%= f.email_field :email, class: "avito-input", placeholder: "Entrez votre email" %>
          <% if flash[:email_error] %>
            <span class="field-error"><%= flash[:email_error] %></span>
          <% end %>
        </div>
        
        <div class="avito-form-group">
          <%= f.label :password, "Mot de passe", class: "avito-label" %>
          <%= f.password_field :password, class: "avito-input" %>
          <% if flash[:password_error] %>
            <span class="field-error"><%= flash[:password_error] %></span>
          <% end %>
        </div>
        
        <div class="avito-form-group remember-me">
          <%= f.check_box :remember_me, class: "avito-checkbox" %>
          <%= f.label :remember_me, "Se souvenir de moi", class: "avito-checkbox-label" %>
        </div>
        
        <div class="avito-button-container">
          <%= f.submit "Continuer", class: "avito-button" %>
        </div>
      <% end %>
      
      <div class="avito-signup">
        <p>Vous n'avez pas de compte? <%= link_to "S'inscrire maintenant!", signup_path, class: "avito-link" %></p>
      </div>
    </div>
  </div>
</div>